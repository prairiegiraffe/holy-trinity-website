---
interface Props {
  activeNav?: string;
}

const { activeNav } = Astro.props;

const navItems = [
  { name: "Dashboard", href: "/admin", icon: "home" },
  { name: "Blog Posts", href: "/admin/blog", icon: "file-text" },
  { name: "Events", href: "/admin/events", icon: "calendar" },
  { name: "Members", href: "/admin/members", icon: "users" },
  { name: "Testimonials", href: "/admin/testimonials", icon: "message-circle" },
  { name: "Pages", href: "/admin/pages", icon: "layout" },
  { name: "Users", href: "/admin/users", icon: "user-plus" },
];

const icons: Record<string, string> = {
  home: `<path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/>`,
  "file-text": `<path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/><line x1="16" x2="8" y1="13" y2="13"/><line x1="16" x2="8" y1="17" y2="17"/><line x1="10" x2="8" y1="9" y2="9"/>`,
  calendar: `<rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/>`,
  users: `<path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>`,
  "message-circle": `<path d="M7.9 20A9 9 0 1 0 4 16.1L2 22Z"/>`,
  layout: `<rect width="18" height="18" x="3" y="3" rx="2" ry="2"/><line x1="3" x2="21" y1="9" y2="9"/><line x1="9" x2="9" y1="21" y2="9"/>`,
  "user-plus": `<path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><line x1="19" x2="19" y1="8" y2="14"/><line x1="22" x2="16" y1="11" y2="11"/>`,
};
---

<aside class="sidebar">
  <div class="sidebar-header">
    <a href="/admin" class="sidebar-logo">
      <span class="logo-icon">HT</span>
      <span class="logo-text">Holy Trinity</span>
    </a>
  </div>

  <nav class="sidebar-nav">
    {
      navItems.map((item) => (
        <a
          href={item.href}
          class:list={[
            "nav-item",
            {
              active:
                activeNav === item.name.toLowerCase() ||
                (item.href === "/admin" && !activeNav),
            },
          ]}
        >
          <svg
            class="nav-icon"
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            set:html={icons[item.icon]}
          />
          <span>{item.name}</span>
        </a>
      ))
    }
  </nav>

  <div class="sidebar-footer">
    <a href="/" class="nav-item" target="_blank">
      <svg
        class="nav-icon"
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
        ></path>
        <polyline points="15 3 21 3 21 9"></polyline>
        <line x1="10" x2="21" y1="14" y2="3"></line>
      </svg>
      <span>View Site</span>
    </a>
  </div>
</aside>

<style>
  .sidebar {
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    width: 256px;
    background: #1a202c;
    display: flex;
    flex-direction: column;
    z-index: 100;
  }

  .sidebar-header {
    padding: 1.25rem 1rem;
    border-bottom: 1px solid #2d3748;
  }

  .sidebar-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: white;
  }

  .logo-icon {
    width: 36px;
    height: 36px;
    background: linear-gradient(135deg, #4299e1, #2c5282);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.875rem;
  }

  .logo-text {
    font-weight: 600;
    font-size: 1.125rem;
  }

  .sidebar-nav {
    flex: 1;
    padding: 1rem 0.75rem;
    overflow-y: auto;
  }

  .nav-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    border-radius: 6px;
    color: #a0aec0;
    text-decoration: none;
    font-size: 0.9375rem;
    transition: all 0.2s;
    margin-bottom: 0.25rem;
  }

  .nav-item:hover {
    color: white;
    background: #2d3748;
  }

  .nav-item.active {
    color: white;
    background: #2c5282;
  }

  .nav-icon {
    flex-shrink: 0;
  }

  .sidebar-footer {
    padding: 1rem 0.75rem;
    border-top: 1px solid #2d3748;
  }

  @media (max-width: 768px) {
    .sidebar {
      transform: translateX(-100%);
      transition: transform 0.3s;
    }

    .sidebar.open {
      transform: translateX(0);
    }
  }
</style>
