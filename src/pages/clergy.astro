---
import Section from "@/components/core/Section.astro";
import Base from "@/layouts/Base.astro";
import { getEntry } from "astro:content";

const clergy = await getEntry("clergy", "index");
const page_data = {
  ...clergy.data,
  content: clergy.body,
};
const { Content } = await clergy.render();
const { banner } = clergy.data;
---

<Base
  entry_keys={["clergy", "index"]}
>
  <!-- Hero Section -->
  {banner && (
    <section class="animate-fade-in">
      <Section section={banner} isHero={true} />
    </section>
  )}

  <!-- Content Section -->
  <section class="py-16">
    <div class="container">
      <div class="mx-auto max-w-6xl">
        <!-- Rev. Lin Davenport Section -->
        <div class="flex flex-col lg:flex-row gap-8 lg:gap-12 items-start mb-12">
          <!-- Image on Left -->
          <div class="w-full lg:w-1/3 flex justify-center lg:justify-start">
            <img
              src="/images/Rev-Lin.jpeg"
              alt="Rev. Lin Davenport"
              class="w-full max-w-sm rounded-lg shadow-lg object-cover"
            />
          </div>

          <!-- Text on Right -->
          <div class="w-full lg:w-2/3 lg:pl-4">
            <h2 class="text-3xl lg:text-4xl font-secondary font-bold text-primary mb-2">Rev. Lin Davenport</h2>
            <h3 class="text-xl lg:text-2xl font-secondary font-semibold text-secondary mb-6">Rector</h3>

            <div class="prose prose-lg max-w-none">
              <Content />
            </div>
          </div>
        </div>

        <!-- Mission Statement Section - Full Width -->
        <div class="border-t border-border pt-8 mt-8">
          <div class="text-center">
            <p class="text-xl lg:text-2xl font-primary italic text-text-secondary max-w-4xl mx-auto leading-relaxed">
              "Following the example of our Lord Jesus Christ, Holy Trinity loves, leads, serves and follows where God calls."
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>