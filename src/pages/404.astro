---
import Logo from "@/components/core/Logo.astro";
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";

const { logo } = config.site;
---

<Base title="Page Not Found - Holy Trinity Episcopal Church">
  <section class="section">
    <div class="container">
      <div class="flex h-[40vh] items-center justify-center">
        <div class="flex flex-col items-center text-center">
          <Logo showText={false} />
          <h1 class="mb-4 text-4xl font-bold">Page Not Found</h1>
          <p class="mb-6 text-lg">Sorry, the page you're looking for doesn't exist.</p>
          <a href="/" class="btn btn-primary">Return Home</a>
        </div>
      </div>
    </div>
  </section>
</Base>
